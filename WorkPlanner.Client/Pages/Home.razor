@page "/"

<PageTitle>WorkSummary - Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to WorkSummary</MudText>

<MudText Typo="Typo.body1" Class="mb-4">
    Track your work hours, manage tasks, and generate reports effortlessly.
</MudText>

<MudGrid>
    <MudItem xs="12" md="4">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Primary">
                        <MudIcon Icon="@Icons.Material.Filled.Task" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Tasks</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Manage your tasks and track their progress.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="tasks">View Tasks</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="4">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary">
                        <MudIcon Icon="@Icons.Material.Filled.Timer" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Timer</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Track your work time with the built-in timer.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="timer">Start Timer</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="4">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Tertiary">
                        <MudIcon Icon="@Icons.Material.Filled.Assessment" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Reports</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Generate daily and weekly work summaries.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="reports">View Reports</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>
